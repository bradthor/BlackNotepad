<Window x:Class="Savaged.BlackNotepad.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Background="Black"
        Height="600" Width="800">
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+N" Command="{Binding NewCmd}"/>
    </Window.InputBindings>
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Margin="0,0,0.4,0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewCmd}"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="OnMenuExitClick"/>
            </MenuItem>
        </Menu>
        <Grid FocusManager.FocusedElement="{Binding ElementName=ContentText}">
            <TextBox Name="ContentText" 
                     Background="Black" Foreground="White"
                     AcceptsReturn="True" AcceptsTab="True"                     
                     Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </DockPanel>
</Window>
